<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Appointments.Views.StartDiaryPage" BackgroundColor="Beige">


    <StackLayout>
      <Button Text="Take Photo" Command="{Binding TakePhotoCommand}" BackgroundColor="Gray" CornerRadius="80" VerticalOptions="CenterAndExpand"/>
    <Image HeightRequest="500" WidthRequest="500" Source="{Binding CameraImage,Path= Stream}"/>


    <Button Text="Personal Diary" Command="{Binding PersonalDiaryCommand}" BackgroundColor="Gray" CornerRadius="80" VerticalOptions="CenterAndExpand"/>




    </StackLayout>

</ContentPage>